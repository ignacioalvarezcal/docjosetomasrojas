---
/**
 * * Contact section for the website
 */

import ContactForm from "@components/Forms/ContactForm.astro";
import { Image } from "astro:assets";
import siteData from "@config/siteData.json.ts";

interface Props {
	class?: string;
}

const { class: className } = Astro.props as Props;

import contactImage from "@assets/images/rings-min.jpg"; // SOLUCIÓN TEMPORAL

---

<section
	id="contact"
	class="mx-auto max-w-md scroll-mt-10 px-4 py-8 md:max-w-6xl md:py-12"
	class:list={[className]}
>
	<h2 class="h2 md:px-12 lg:text-6xl">Agenda tu Evaluación</h2>
	<div class="grid gap-y-10 md:grid-cols-2">
		<div class="border-primary-300 pt-8 md:border-r md:pr-20 md:pl-12">
			<p class="description text-lg">
				¿Listo para comenzar tu tratamiento o tienes alguna pregunta? Completa el formulario y te contactaremos a la brevedad.
			</p>
			<div class="mt-6 text-lg">
				<p><strong>Teléfono:</strong> {siteData.contact.phone}</p>
				<p><strong>Email:</strong> {siteData.contact.email}</p>
				<p><strong>Dirección:</strong> {siteData.contact.address}</p>
			</div>
			<div class="mx-auto mt-8 aspect-square overflow-hidden">
				<Image
					src={contactImage}
					alt="Clínica dental del Dr. José Tomás Rojas Vera en Providencia"
					width={450}
					densities={[1.5, 2]}
					class="h-full w-full object-cover"
				/>
			</div>
		</div>
		<div class="md:pr-12 md:pl-20">
			<ContactForm />
		</div>
	</div>
</section>
