---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import Button from "@components/Button/Button.astro";
import heroImage from "@images/hero-bg-min.jpg";
import heroImageMobile from "@images/hero-bg-min.jpg";
import { Image } from "astro:assets";
---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/50"></div>

		<Image
			src={heroImage}
			class="hidden h-auto min-h-full w-full object-cover object-right sm:block"
			alt="Clínica dental del Dr. José Tomás Rojas Vera"
			aria-hidden="true"
			loading="eager"
			height={1400}
		/>
		<Image
			src={heroImageMobile}
			class="h-auto min-h-full w-full object-cover sm:hidden"
			alt="Clínica dental del Dr. José Tomás Rojas Vera"
			aria-hidden="true"
			loading="eager"
			width={1200}
		/>
	</div>

	<!-- hero items -->
	<div class="site-container relative w-full gap-10 py-44 text-center md:py-52 md:text-left">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mr-auto flex-col md:max-w-xl">
			<h2
				class="text-pretty text-xl font-semibold tracking-widest drop-shadow-[0_2px_2px_rgba(0,0,0,0.5)]"
			>
				Implantología y rehabilitación oral
			</h2>
			<h3
				class="font-heading-1 mt-4 text-pretty text-4xl font-semibold drop-shadow-[0_3px_3px_rgba(0,0,0,0.6)] md:text-6xl md:leading-tight"
			>
				Dr.<br> José Tomás<br> Rojas Vera
			</h3>
			
			<div class="mt-8 rounded-lg bg-black/20 p-6 backdrop-blur-sm md:mb-10 lg:text-lg">
			<!--
				<p class="text-pretty text-lg tracking-wide drop-shadow-[0_2px_2px_rgba(0,0,0,0.5)] md:text-xl">
					Soy cirujano dentista con especialidad en Implantología y Odontología Estética.
					Tengo un enfoque centrado en el bienestar y la rehabilitación oral. Quiero ofrecerte una atención integral basada en la confianza por que creo que cada tratamiento es una oportunidad para acompañar, escuchar y entregar soluciones reales con dedicación y precisión.
				</p>
				-->
				
				<div class="text-pretty text-lg tracking-wide drop-shadow-[0_2px_2px_rgba(0,0,0,0.5)] md:text-xl">
					<p class="font-heading-1 text-3xl italic">Recupera la confianza en tu sonrisa</p>
				</div>
				
			</div>
			
		</div>
	</div>
</section>
